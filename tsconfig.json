{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "jsx": "react-jsx", // or "react" based on your React version
    "strict": true,
    "types": ["node", "jest", "@testing-library/jest-dom"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
    },
    "lib": ["es2015", "dom"] // Add this line to include ES2015 features
  },
  "include": ["src"]
}
